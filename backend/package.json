{
  "name": "smartcontracts-project-backend",
  "version": "3.0.0",
  "description": "Mini-project to learn about smart-contracts",
  "engines": {
    "node": ">= 16.14 <19"
  },
  "main": "index.js",
  "scripts": {
    "start": "node dist/src/index.js",
    "clean": "rimraf dist tmp",
    "build": "tsc -p tsconfig.json",
    "lint:fix": "eslint src/. --config .eslintrc.js --ignore-path .eslintignore --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint src/. --config .eslintrc.js --ignore-path .eslintignore --ext .js,.jsx,.ts,.tsx",
    "prettier:fix": "prettier --write \"**/*.{js,json,md,css,ts,tsx}\"",
    "prettier:check": "prettier --check \"**/*.{js,json,md,css,ts,tsx}\""
  },
  "author": "Simon Lussi",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ethers": "^5.5.4",
    "express": "^4.18.2",
    "mongoose": "^7.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "typescript": "^5.0.4"
  }
}
